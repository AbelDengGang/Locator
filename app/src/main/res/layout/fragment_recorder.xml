<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".RecorderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/beginRecorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始记录"
                    android:textSize="25px"/>

                <Button
                    android:id="@+id/playbackRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回放记录"
                    android:textSize="25px" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner android:id="@+id/spinnerPullDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:theme="@style/ThemeSpinner"
                    ></Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner android:id="@+id/spinnerPullDownLocator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:theme="@style/ThemeSpinner"
                    ></Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

               <androidx.appcompat.widget.AppCompatCheckBox
                   android:id="@+id/checkbox_compass"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="开启指南针"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:id="@+id/fragment_main_01"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </RelativeLayout>
        </LinearLayout>



    </LinearLayout>

<!--    <LinearLayout-->
<!--        android:layout_width="800dp"-->
<!--        android:layout_height="match_parent">-->

<!--        -->
<!--    </LinearLayout>-->

</FrameLayout>